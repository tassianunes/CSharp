using System;

namespace Exercicio47
{
    class Program
    {
        static void Main(string[] args)
        {
            //Crie um programa que mostre na tela todos os numeros pares que estao no intervalo de 1 e 50

            for (int i = 0; i<= 50; i++)
            {
                if (i%2 == 0)
                {
                    Console.WriteLine(i);
                }

            }
        }
    }
}
